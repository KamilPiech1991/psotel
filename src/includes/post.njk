{% include 'header.njk' %}

{% include 'hero-post.njk' %}

<section class="section post pb-xlarge">
    <div class="container">
        <div class="row gx-5">
            <div class="col-md-2 d-none d-md-block">
                 <div class="sticky" id="fb-share-button">
                <svg viewBox="0 0 12 12" preserveAspectRatio="xMidYMid meet">
                    <path class="svg-icon-path" d="M9.1,0.1V2H8C7.6,2,7.3,2.1,7.1,2.3C7,2.4,6.9,2.7,6.9,3v1.4H9L8.8,6.5H6.9V12H4.7V6.5H2.9V4.4h1.8V2.8 c0-0.9,0.3-1.6,0.7-2.1C6,0.2,6.6,0,7.5,0C8.2,0,8.7,0,9.1,0.1z"></path>
                </svg>
                <span>Podziel siÄ™</span>
                </div>
            </div>
            <div class="col-md-6">
                {{ content | safe }}
            </div>
            <div class="col-md-4 d-none d-md-block">
                <div class="sidebar sticky">
                    {% for post in collections.posts %}
                        <div class="pb-xsmall">
                            <a href="{{ post.url }}">
                                <div class="row align-items-center">
                                    <div class="col-3">
                                        <img src="{{ post.data.postThumb }}" class="post-thumb">
                                    </div>
                                    <div class="col-9">
                                        <h2 class="h5 mt-0 mb-1">{{ post.data.title }}</h2>
                                    </div>
                                </div>
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</section>

{% include 'footer.njk' %}